%div{class: "content"}
  =link_to "Nueva Lista", new_list_path, class: "btn btn-primary btn-xs"
  %ul
    - @list.each do |l|
      %li
        =link_to l.name, list_tasks_path(l), remote: true
        =link_to "Editar", edit_list_path(l)
        =link_to "Eliminar", list_path(l), method: :delete, data: { confirm: 'Are you sure?' }
        =link_to "Agregar Tarea", new_list_task_path(l)
%div{class: "tasks"}
