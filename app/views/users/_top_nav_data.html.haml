-if logged_in?
  %li.dropdown
    %a{:href=>"#", :class=>"dropdown-toggle", :data=>{:toggle=>"dropdown"}}
      %i.fa.fa-user
      =current_user.name
      %b.caret
    %ul.dropdown-menu
      %li
        =link_to current_user do
          %i.fa.fa-fw.fa-user
          Profile
      %li.divider
      %li
        =link_to logout_path, method: :delete do
          %i.fa.fa-fw.fa-power-off
          Log Out
-else
  %li
    =link_to login_path, remote: true, :'data-toggle' => 'modal', :'data-target' => '#modal-window' do
      %i.fa.fa-sign-in
        Log In